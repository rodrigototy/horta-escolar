<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= plant.name %></title>
  <link rel="stylesheet" href="/styles/player.css">
</head>
<body>
  <div class="container">
    <h1><%= plant.name %></h1>
    <img src="/img/<%= plant.image %>" alt="<%= plant.name %>" style="max-width: 100%; height: auto;">
    <div class="description">
      <% plant.description.forEach(desc => { %>
        <p><%= desc %></p>
      <% }) %>
    </div>
    <a href="/">Voltar</a>
  </div>
</body>
</html>
